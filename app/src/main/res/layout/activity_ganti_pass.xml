<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="changePassword.GantiPassActivity"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:textColor="#5eb5a6"/>

                <EditText
                    android:id="@+id/et_oldPass"
                    android:layout_width="348dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/et_reg"
                    android:hint="Masukkan Password Lama"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColorHint="#5eb5a6"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:inputType="textPassword"/>

                <EditText
                    android:id="@+id/et_newPass"
                    android:layout_width="348dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/et_reg"
                    android:hint="Masukkan Password Baru"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColorHint="#5eb5a6"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:inputType="textPassword"/>

                <EditText
                    android:id="@+id/et_confirmPass"
                    android:layout_width="348dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/et_reg"
                    android:hint="Masukkan Konfirmasi Password"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColorHint="#5eb5a6"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:inputType="textPassword"/>

                <Button
                    android:id="@+id/btn_save_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginRight="55dp"
                    android:background="@drawable/btn_login"
                    android:elevation="1dp"
                    android:padding="10dp"
                    android:text="Save Change"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="normal" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>

</RelativeLayout>