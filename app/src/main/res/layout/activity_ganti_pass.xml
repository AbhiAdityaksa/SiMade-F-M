<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="changePassword.GantiPassActivity">


    <android.support.v7.widget.CardView
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="8dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:textColor="#5eb5a6"/>

            <EditText
                android:id="@+id/et_oldPass"
                android:layout_width="348dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/et_reg"
                android:hint="Masukkan Password Lama"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColorHint="#5eb5a6"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/et_newPass"
                android:layout_width="348dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/et_reg"
                android:hint="Masukkan Username Baru"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColorHint="#5eb5a6"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/et_confirmPass"
                android:layout_width="348dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/et_reg"
                android:hint="Masukkan Konfirmasi Password"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColorHint="#5eb5a6"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn_save_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:background="@drawable/btn_login"
                android:elevation="1dp"
                android:padding="10dp"
                android:text="Save Change"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="normal" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>