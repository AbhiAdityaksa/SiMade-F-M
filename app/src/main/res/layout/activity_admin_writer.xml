<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.simadeui.admin.writer.AdminWriterActivity">

    <LinearLayout
        android:id="@+id/actionbar1"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/background">

        <ImageView
            android:id="@+id/back_writer_admin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_arrow"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="#5EB5A6"
            android:elevation="1dp"/>

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/admin_writer_tab"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        style="@style/SlidingTabs"
        android:background="@color/background"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_admin_writer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
