<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.writer.villageinfo.DetailVillageInfoActivity">

    <LinearLayout
        android:id="@+id/action_bar_notif_admin"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/background"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/back_info_desa_admin_detail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_arrow"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="#5EB5A6"
            android:elevation="1dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/back_cover"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_below="@id/action_bar_notif_admin"
        android:src="@color/colorgrey"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:orientation="vertical"
            android:background="@drawable/bg_shadow">

            <TextView
                android:id="@+id/tv_info_desa_date_admin_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22 Maret 2019"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_info_desa_name_admin_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#5EB5A6"
                android:textStyle="bold"
                android:text="User Satu"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/iv_info_desa_admin_detail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/bg_shadow"/>

            <TextView
                android:id="@+id/tv_info_desa_etc_admin_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>