<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="Auth.EditProfileActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/actionbar1"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/back_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_arrow"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="#5EB5A6"
            android:elevation="1dp"/>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        app:layout_constraintBaseline_toBaselineOf="@id/actionbar1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:paddingBottom="80dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/edit_profile_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_launcher_background"
                    app:civ_border_color="#FFf"
                    app:civ_border_width="4dp"
                    android:elevation="1dp"
                    tools:ignore="VectorDrawableCompat" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="540dp"
                            android:layout_marginTop="75dp"
                            app:cardCornerRadius="10dp">

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:padding="10dp">

                                    <TextView
                                        android:id="@+id/tv_add_image"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Pilih Photo"
                                        android:layout_marginTop="60dp"
                                        android:textSize="15sp"
                                        android:layout_gravity="center_horizontal"/>

                                    <EditText
                                        android:id="@+id/et_profile_nama_edit"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="20dp"
                                        android:layout_marginBottom="16dp"
                                        android:background="@drawable/et_reg"
                                        android:padding="5dp"
                                        android:text="Pak Made"
                                        android:textColor="#5eb5a6"
                                        android:textSize="16sp"/>

                                    <EditText
                                        android:id="@+id/et_ktp_edit"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="0dp"
                                        android:layout_marginBottom="16dp"
                                        android:background="@drawable/et_reg"
                                        android:padding="5dp"
                                        android:text="No KTP"
                                        android:textColor="#5eb5a6"
                                        android:textSize="16sp"
                                        android:textStyle="normal"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0.571"
                                        app:layout_constraintStart_toStartOf="parent"
                                        tools:layout_editor_absoluteY="161dp" />

                                    <Spinner
                                        android:id="@+id/st_work_status_edit"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="0dp"
                                        android:layout_marginBottom="16dp"
                                        android:background="@drawable/et_reg"
                                        android:padding="5dp"
                                        android:textColor="#5eb5a6"
                                        android:textSize="16sp"
                                        android:textStyle="normal"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0.571"
                                        app:layout_constraintStart_toStartOf="parent"
                                        tools:layout_editor_absoluteY="225dp" />

                                    <EditText
                                        android:id="@+id/et_contact_edit"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="0dp"
                                        android:layout_marginBottom="16dp"
                                        android:background="@drawable/et_reg"
                                        android:padding="5dp"
                                        android:text="Kontak"
                                        android:textColor="#5eb5a6"
                                        android:textSize="16sp"
                                        android:textStyle="normal"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0.571"
                                        app:layout_constraintStart_toStartOf="parent"
                                        tools:layout_editor_absoluteY="287dp" />

                                    <Spinner
                                        android:id="@+id/s_pekerjaan_edit"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="0dp"
                                        android:layout_marginBottom="16dp"
                                        android:background="@drawable/et_reg"
                                        android:padding="5dp"
                                        android:textColor="#5eb5a6"
                                        android:textStyle="normal"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0.571"
                                        app:layout_constraintStart_toStartOf="parent"
                                        tools:layout_editor_absoluteY="347dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Tanggal Lahir"
                                        android:textSize="15sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:orientation="horizontal">

                                        <Button
                                            android:id="@+id/btn_tanggal_profile"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="4"
                                            android:background="@drawable/btn_login"
                                            android:text="Set"
                                            android:textColor="#fff"/>

                                        <TextView
                                            android:id="@+id/tv_tanggal_lahir"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="12"
                                            android:textSize="18sp"
                                            android:layout_marginLeft="8dp"/>

                                        <TextView
                                            android:id="@+id/tv_bulan_lahir"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Februari"
                                            android:textSize="18sp"
                                            android:layout_marginLeft="4dp"/>

                                        <TextView
                                            android:id="@+id/tv_tahun_lahir"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="1998"
                                            android:textSize="18sp"
                                            android:layout_marginLeft="4dp"/>

                                    </LinearLayout>

                                </LinearLayout>
                            </ScrollView>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/bt_save_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="600dp"
                    android:layout_marginRight="55dp"
                    android:background="@drawable/btn_login"
                    android:padding="10dp"
                    android:text="Save Profile"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="normal" />

            </RelativeLayout>

        </ScrollView>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>